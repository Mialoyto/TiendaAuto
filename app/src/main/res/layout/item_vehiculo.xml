<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="20sp"
    >
    <LinearLayout
        android:background="@drawable/edittext_disenio"
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingStart="8sp"
            android:paddingEnd="8sp"
            android:src="@drawable/card"
            android:layout_width="150sp"
            android:layout_height="100sp"/>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="start"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTipoVehiculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo Vehiculo"
                android:drawableStart="@drawable/baseline_star_24"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:drawablePadding="3sp"/>

            <TextView
                android:id="@+id/tvMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modelo"
                android:textStyle="bold"
                android:drawableStart="@drawable/baseline_directions_car_24"
                android:textAllCaps="true"
                android:drawablePadding="3sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="start"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTipoCom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/baseline_local_gas_station_24"
                android:text="Tipo de Combustible"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:drawablePadding="3sp"/>

            <TextView
                android:id="@+id/tvAnioFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/baseline_date_range_24"
                android:text="AÃ±o fabricacion"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:drawablePadding="3sp"/>



        </LinearLayout>

    </LinearLayout>




</LinearLayout>